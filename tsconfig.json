{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"include": ["src/**/*.ts", "types/**/*.d.ts"],
	"exclude": ["node_modules"]
}
